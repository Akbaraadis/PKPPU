<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.SkpkActivity">

    <TextView
        android:id="@+id/detail_skmk_tv_rtrw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextField"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Surat RT/RW"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/detail_skpk_rtrw"
        android:enabled="false"
        android:inputType="text"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_rectangle"
        android:textSize="12sp"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="10dp"
        android:editable="false"
        app:layout_constraintTop_toBottomOf="@+id/detail_skmk_tv_rtrw"
        app:layout_constraintStart_toStartOf="@id/detail_skmk_tv_rtrw"/>

    <LinearLayout
        android:id="@+id/skpk_ll_rtrw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_skmk_tv_rtrw"
        app:layout_constraintEnd_toEndOf="@id/detail_skmk_tv_rtrw"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rectangle_blue"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginStart="5dp"/>

        <TextView
            style="@style/TextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:text="Pilih File"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/detail_skpk_tv_ktp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextField"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="KTP Almarhum"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/detail_skpk_rtrw"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/detail_skpk_ktp"
        android:enabled="false"
        android:inputType="text"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_rectangle"
        android:textSize="12sp"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="10dp"
        android:editable="false"
        app:layout_constraintTop_toBottomOf="@+id/detail_skpk_tv_ktp"
        app:layout_constraintStart_toStartOf="@id/detail_skmk_tv_rtrw"/>

    <LinearLayout
        android:id="@+id/skpk_ll_ktp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_skpk_tv_ktp"
        app:layout_constraintEnd_toEndOf="@id/detail_skmk_tv_rtrw"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rectangle_blue"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih File"
            android:textColor="@color/white"
            style="@style/TextField"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/detail_skpk_tv_kk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextField"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="KK Almarhum"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/detail_skpk_ktp"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/detail_skpk_kk"
        android:enabled="false"
        android:inputType="text"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_rectangle"
        android:textSize="12sp"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="10dp"
        android:editable="false"
        app:layout_constraintTop_toBottomOf="@+id/detail_skpk_tv_kk"
        app:layout_constraintStart_toStartOf="@id/detail_skmk_tv_rtrw"/>

    <LinearLayout
        android:id="@+id/skpk_ll_kk"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_skpk_tv_kk"
        app:layout_constraintEnd_toEndOf="@id/detail_skmk_tv_rtrw"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rectangle_blue"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih File"
            android:textColor="@color/white"
            style="@style/TextField"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/skpk_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="KIRIM"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>