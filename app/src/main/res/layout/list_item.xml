<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/parent_layout"
    android:background="@drawable/shape_item"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/text_nik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_nik"
        app:layout_constraintBottom_toBottomOf="@id/item_nik"
        app:layout_constraintStart_toStartOf="parent"
        android:text="No Req : "
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_status"
        app:layout_constraintBottom_toBottomOf="@id/item_status"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Status : "
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_nik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomer"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/text_nik"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/item_nik"
        app:layout_constraintTop_toBottomOf="@id/item_nik"/>

</androidx.constraintlayout.widget.ConstraintLayout>